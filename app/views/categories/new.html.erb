<div class="post_title">
  <h1>Create a new Category</h1>
</div>
<div class="post_body">
  <p>

    <% form_for(@category) do |f| %>
      <%= f.error_messages %>

      <p>
        <%= f.label :content %><br />
        <%= f.text_field :content %>
      </p>
      <%= f.hidden_field :creator_id, :value => @current_user.id %>
      <p>
        <%= f.submit "Create" %>
      </p>
    <% end %>

    <%= link_to 'Back', categories_path %>

  </p>
</div>